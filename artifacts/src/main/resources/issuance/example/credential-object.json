{
  "@context": [
    "https://w3id.org/dspace-dcp/v0.8",
    "https://www.w3.org/2018/credentials/v1",
    "https://www.w3.org/2018/credentials/examples/v1"
  ],
  "type": "CredentialObject",
  "credentialType": [
    "VerifiableCredential",
    "CompanyCredential"
  ],
  "format": "ldp_vc",
  "offerReason": "reissue",
  "bindingMethods": [
    "did:web"
  ],
  "cryptography": [
    "JsonWebSignature2020",
    "eddsa-rdfc-2022",
    "eddsa-jcs-2022",
    "..."
  ],
  "issuancePolicy": {
    "id": "Scalable trust example",
    "input_descriptors": [
      {
        "id": "pd-id",
        "constraints": {
          "fields": [
            {
              "path": [
                "$.holderIdentifier"
              ],
              "filter": {
                "type": "string",
                "pattern": "^BPN[LS][a-zA-Z0-9]{12}$"
              }
            }
          ]
        }
      }
    ]
  }
}